#!/bin/sh

export GLOBAL_AGENT_HTTP_PROXY=$(echo $http_proxy)
export GLOBAL_AGENT_HTTPS_PROXY=$(echo $https_proxy)
export GLOBAL_AGENT_NO_PROXY=$(echo $no_proxy)

basedir=$(npm bin -g | sed -e 's,\\,/,g')

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node" -r "$basedir/node_modules/global-agent/bootstrap" "$basedir/node_modules/now/dist/index.js" "$@"
  ret=$?
else 
  node -r "$basedir/node_modules/global-agent/bootstrap" "$basedir/node_modules/now/dist/index.js" "$@"
  ret=$?
fi
exit $ret
